@model Laptop

@{
	ViewData["Title"] = "Laptops Details";
}

<div class="row">
	
		<div class="col-md-8 offset-2">
			<div class="card mb-3" style="max-width: 540px;">
				<div class="row g-0">
					<div class="col-md-12">
						<div class="card-header text-white bg-info">
							<p class="card-text">
								<h5 class="card-title">
									@Model.ProductName
								</h5>
							</p>
						</div>
						<div class="col-md-4">
							<img src="@Model.ImageUrl" width="100%" alt="@Model.ProductName" />
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<p class="card-text"><b>Description: </b>@Model.Description</p>
								<p class="card-text"><b>Price: </b>@Model.Price Kd</p>
							</div>
						</div>
						<div class="col-md-12">
							<div class="card-footer">
								<p class="card-text">
									<a class="btn btn-outline-primary float-right" asp-action="Index">
										Back to List
									</a>
									<a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-puls"></i> Add to Cart </a>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
</div>
